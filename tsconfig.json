{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "services/**/*.ts", 
    "services/**/*.tsx", 
    "services/vite-env.d.ts"
  ],
  "exclude": ["node_modules"]
}